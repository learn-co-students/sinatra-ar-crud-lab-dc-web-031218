<form method="post" action="/posts/<%=@post.id%>">
  <p>Post Name: <input type="text" name="name" value="<%=@post.name%>"></p>
  <p>Post Content: <input type="text" name="content" value="<%=@post.content%>"></p>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="submit" value="submit">
</form>
